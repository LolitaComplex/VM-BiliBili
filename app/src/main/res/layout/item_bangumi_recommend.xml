<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    >

    <LinearLayout
        android:id="@+id/BangumiRecommendItem_header_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/BangumiRecommendItem_header_iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/ic_category_t13"
            />

        <TextView
            android:id="@+id/BangumiRecommendItem_header_tv_title"
            style="@style/TextStyle_16sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/bangumi_recommend_title"
            />
    </LinearLayout>


    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/BangumiRecommendItem_header_more"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_text_gray_bg_squarence"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:text="@string/more"
        android:textColor="@color/text_white"
        android:textSize="12sp"
        />


    <com.doing.bilibili.ui.GridViewFactoryView
        android:id="@+id/BangumiRecommendItem_body_cvf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BangumiRecommendItem_header_ll"
        android:layout_marginTop="5dp"
        android:columnCount="2"
        android:rowCount="2"
        />

    <LinearLayout
        android:id="@+id/BangumiRecommendItem_footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/BangumiRecommendItem_body_cvf"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/BangumiRecommendItem_footer_btn_timeline"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="@drawable/item_touch_have_bg"
            android:background="@drawable/layer_bagumi_recommend_timeline"
            />

        <ImageButton
            android:id="@+id/BangumiRecommendItem_footer_btn_index"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_weight="1"
            android:src="@drawable/item_touch_have_bg"
            android:background="@drawable/layer_bagumi_recommend_index"
            />

    </LinearLayout>
</RelativeLayout>