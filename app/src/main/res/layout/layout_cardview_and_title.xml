<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_height="150dp">

        <ImageView
            android:id="@+id/CardViewItem_iv_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="top"
            android:scaleType="centerCrop"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@drawable/shape_gradient_black"
            android:layout_gravity="bottom"
            />

        <TextView
            android:id="@+id/CardViewItem_tv_current_person"
            style="@style/TextStyle_12sp"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="5dp"
            android:singleLine="true"
            android:textColor="@color/text_white"
            />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/CardViewItem_tv_title"
        style="@style/TextStyle_14sp"
        android:textSize="13sp"
        android:maxLines="2"
        android:layout_marginTop="10dp"
        />


    <TextView
        android:id="@+id/CardViewItem_tv_regfresh"
        style="@style/TextStyle_14sp"
        android:textColor="@color/gray"
        android:singleLine="true"
        />
</LinearLayout>