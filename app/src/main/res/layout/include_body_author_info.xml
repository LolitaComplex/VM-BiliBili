<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/BiliDetailSummaryFragment_body_iv_cover"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp" />

            <TextView
                android:id="@+id/BiliDetailSummaryFragment_body_tv_author"
                style="@style/TextStyle_12sp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/BiliDetailSummaryFragment_body_iv_cover" />

            <TextView
                android:id="@+id/BiliDetailSummaryFragment_body_tv_time"
                style="@style/TextStyle_12sp"
                android:layout_below="@id/BiliDetailSummaryFragment_body_tv_author"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@id/BiliDetailSummaryFragment_body_iv_cover"
                android:textColor="@color/dark_gray" />

            <TextView
                android:id="@+id/BiliDetailSummaryFragment_body_tv_attention"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/shape_btn_register"
                android:padding="10dp"
                android:text="@string/add_attention"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp" />
        </RelativeLayout>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <android.support.v7.widget.LinearLayoutCompat
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@color/white"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:divider="@drawable/line"
                app:showDividers="middle">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp">

                    <ImageView
                        android:id="@+id/BiliDetailSummaryFragment_body_iv_charge"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/ic_charge_power" />

                    <TextView
                        android:id="@+id/BiliDetailSummaryFragment_body_tv_charge_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/BiliDetailSummaryFragment_body_iv_charge"
                        android:text="请赐予我电量吧！"
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/BiliDetailSummaryFragment_body_tv_charge_subtitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/BiliDetailSummaryFragment_body_tv_charge_title"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/BiliDetailSummaryFragment_body_iv_charge"
                        android:text="已经有6人充电"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/BiliDetailSummaryFragment_body_btn_charge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/selector_btn_login"
                        android:text="充电"
                        android:textColor="@color/white" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp"
                        android:gravity="center"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorPrimary"
                        android:text="更多电量,更多灵感 (~= V =~!!)" />
                </LinearLayout>

            </android.support.v7.widget.LinearLayoutCompat>
        </android.support.v7.widget.CardView>

    </LinearLayout>

</merge>