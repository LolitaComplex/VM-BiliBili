<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:orientation="horizontal"
            android:rowCount="5">
    　　

    <Button
        android:id="@+id/one"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="1"/>
    　　

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/two"
        android:text="2"/>
    　　　

    <Button
        android:id="@+id/three"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"


        android:text="3"/>
    　　

    <Button
        android:id="@+id/devide"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"


        android:text="/"/>
    　　

    <Button
        android:id="@+id/four"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:text="4"/>
    　　

    <Button
        android:id="@+id/five"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:text="5"/>
    　　

    <Button
        android:id="@+id/six"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:text="6"/>
    　　

    <Button
        android:id="@+id/multiply"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:text="×"/>
    　　

    <Button
        android:id="@+id/seven"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"

        android:text="7"/>
    　　

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:text="8"/>
    　　

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/nine"
        android:text="9"/>

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/minus"
        android:text="-"/>

    <Button
        android:id="@+id/zero"
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:layout_columnSpan="2"
        android:layout_gravity="fill"
        android:text="0"/>
    　　

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/point"
        android:text="."/>

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/plus"
        android:layout_gravity="fill"
        android:layout_rowSpan="2"
        android:text="+"/>

    <Button
        android:layout_columnWeight="1"
        android:layout_rowWeight="1"
        android:id="@+id/equal"
        android:layout_columnSpan="3"
        android:layout_gravity="fill"
        android:text="="/>
</GridLayout>