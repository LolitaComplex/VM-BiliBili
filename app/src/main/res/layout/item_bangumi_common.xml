<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp"
    >


    <LinearLayout
        android:id="@+id/BangumiCommonItem_header_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/BangumiCommonItem_header_iv_logo"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/ic_category_t33"
            />

        <TextView
            android:id="@+id/BangumiCommonItem_header_tv_title"
            style="@style/TextStyle_14sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/new_bangumi_title"
            />


    </LinearLayout>


    <TextView
        android:id="@+id/BangumiCommonItem_header_tv_more"
        style="@style/TextStyle_13sp"
        android:layout_alignParentRight="true"
        android:clickable="true"
        android:drawableEnd="@drawable/ic_gray_arrow_right"
        android:drawablePadding="3dp"
        android:padding="8dp"
        android:text="@string/more"
        android:textColor="@color/gray"
        />


    <com.doing.bilibili.ui.GridViewFactoryView
        android:id="@+id/BangumiCommonItem_body_cvf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/BangumiCommonItem_header_ll"
        android:layout_marginTop="5dp"
        android:columnCount="3"
        android:rowCount="1"
        app:isItemCardVIew="false"
        />
</RelativeLayout>