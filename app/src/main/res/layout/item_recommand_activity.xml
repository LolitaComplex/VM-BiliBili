<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:id="@+id/RecommendActivityItem_header_ll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <ImageView
            android:id="@+id/RecommendActivityItem_header_iv_logo"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_header_activity_center"
            />

        <TextView
            android:id="@+id/RecommendActivityItem_header_tv_title"
            style="@style/TextStyle_16sp"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/activity_recommend_title"
            />
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/RecommendActivityItem_header_more"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/RecommendActivityItem_header_ll"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/selector_text_gray_bg_squarence"
        android:clickable="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="5dp"
        android:text="@string/go_and_see"
        android:textColor="@color/text_white"
        android:textSize="12sp"
        />


    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecommendActivityItem_body_recycl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/RecommendActivityItem_header_ll"
        android:layout_marginTop="5dp"
        />


</RelativeLayout>